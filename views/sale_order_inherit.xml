<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- model.name inherit form view -->
<record id="sale_order_inherit_view_id" model="ir.ui.view">
    <field name="name">Sales Order Inherit</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <!-- Add your xpath here -->
        <xpath expr="//button[@name='action_quotation_send']" position="before">
                    <button name="create_mo"  type="object" string="Create MO"/>
        </xpath>
    </field>
</record>




<!-- model.name action window -->
<record id="sale_order_inherit_action" model="ir.actions.act_window">
    <field name="name">Sales Inherit</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sale.order</field>
    <field name="view_mode">tree,form</field>
</record>


<menuitem id="sale_order_inherit_menu_act" 
name="Sales Order Inherit" 
parent="sale_order_inherit_menu_root" 
action="sale_order_inherit_action" 
sequence="10"/>

<!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
</odoo>